<mvvm:MVVMPage
    x:Class="GreaterShare.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GreaterShare"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mvvm="using:MVVMSidekick.Views"
    xmlns:vm="using:GreaterShare.ViewModels"
    mc:Ignorable="d">
    <Page.Resources>
        <!-- TODO: Delete this line if the key AppName is declared in App.xaml -->
        <x:String x:Key="AppName">My Application</x:String>
        <vm:MainPage_Model x:Key="DesignVM"/>
    </Page.Resources>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"  DataContext="{StaticResource DesignVM}">
        <Pivot Margin="32">
            <PivotItem Header="Current Share">
                <RelativePanel>
                    <ScrollViewer RelativePanel.AlignLeftWithPanel="True">
                        <StackPanel Margin="16" >
                            <StackPanel >
                                <TextBlock>
					<Run Text="Title:"/>
                                </TextBlock>
                                <TextBox RelativePanel.AlignBottomWith="" x:Name="pageTitle" Text="{Binding ReceivedShareItem.Title}"  
					IsHitTestVisible="false" TextWrapping="NoWrap"/>
                            </StackPanel>
                            <StackPanel >
                                <TextBlock>
					<Run Text="Logo 30x30:"/>
                                </TextBlock>
                                <Border Background="{Binding ReceivedShareItem.LogoBackgroundColor}" HorizontalAlignment="Left" VerticalAlignment="Top">
                                    <Image Width="30" Height="30"  HorizontalAlignment="Left" VerticalAlignment="Top"  Source="{Binding ReceivedShareItem.Square30x30LogoBase64, Converter={StaticResource StreamImageSourceConverter}}" />
                                </Border>
                            </StackPanel>
                            <StackPanel >
                                <TextBlock>
					<Run Text="ThumbnailStream:"/>
                                </TextBlock>
                                <Image  Source="{Binding ReceivedShareItem.ThumbnailStream}" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            </StackPanel>
                            <StackPanel >
                                <TextBlock>
					<Run Text="Description:"/>
                                </TextBlock>
                                <TextBox Text="{Binding ReceivedShareItem.Description}"/>
                            </StackPanel>
                            <StackPanel >
                                <TextBlock>
					<Run Text="QuickLinkId:"/>
                                </TextBlock>
                                <TextBox Text="{Binding ReceivedShareItem.QuickLinkId}"/>
                            </StackPanel>
                            <StackPanel >
                                <TextBlock>
					<Run Text="ContentSourceApplicationLink:"/>
                                </TextBlock>
                                <TextBox Text="{Binding ReceivedShareItem.ContentSourceApplicationLink}"/>
                            </StackPanel>
                            <StackPanel >
                                <TextBlock>
					<Run Text="ContentSourceWebLink:"/>
                                </TextBlock>
                                <TextBox Text="{Binding ReceivedShareItem.ContentSourceWebLink}"/>
                            </StackPanel>

                            <StackPanel >
                                <TextBlock>
					<Run Text="PackageFamilyName:"/>
                                </TextBlock>
                                <TextBox Text="{Binding ReceivedShareItem.PackageFamilyName}"/>
                            </StackPanel>

                            <!--<ListView ItemsSource="{Binding ReceivedShareItem.AvialableShareItems}">

            </ListView>-->
                        </StackPanel>
                    </ScrollViewer>
                    <FlipView RelativePanel.AlignRightWithPanel="True" Width="500" xmlns:glue="using:GreaterShare.Glue"
			Grid.Row="1" Margin="16" ItemsSource="{Binding ReceivedShareItem.AvialableShareItems}"   >

                        <FlipView.ItemTemplateSelector>
                            <glue:ShareItemDataTemplateSelector  PrefixOfTemplateKey="DataTemplateOf"/>
                        </FlipView.ItemTemplateSelector>
                    </FlipView>

                </RelativePanel>
            </PivotItem>
            <PivotItem Header="Clipboard Share"></PivotItem>
            <PivotItem Header="Saved Shares "></PivotItem>
        </Pivot>
    </Grid>

    <mvvm:MVVMPage.BottomAppBar>
        <AppBar IsOpen="True">
            <StackPanel Orientation="Horizontal">
                <AppBarButton x:Name="appBarButton" HorizontalAlignment="Left" Icon="OpenLocal"  Label="Load From File" VerticalAlignment="Top">
                    <AppBarButton.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem>Open Image</MenuFlyoutItem>
                            <MenuFlyoutItem>Open Text</MenuFlyoutItem>
                            <MenuFlyoutItem>Open Saved Clip</MenuFlyoutItem>
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
                <AppBarButton  Icon="SaveLocal" Label="Save Clipboard" >
                    <AppBarButton.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem>As It Is</MenuFlyoutItem>
                            <MenuFlyoutItem>As Saved Clip</MenuFlyoutItem>
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
            </StackPanel>
        </AppBar>
    </mvvm:MVVMPage.BottomAppBar>
   

</mvvm:MVVMPage>
